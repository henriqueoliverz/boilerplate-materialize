<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>BoilerPlate - Materialize - OpenSource</title>
    <link href="~/Content/font-awesome.min.css" type="text/css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css" type="text/css" rel="stylesheet" media="screen">
    <link href="~/Content/Account.css" type="text/css" rel="stylesheet" media="screen">

</head>
<body class="cyan">

    <main class="valign-wrapper valign">
        <div id="login-page" class="row login-page">
            <div class="col s12 z-depth-4 card-panel">

                <div class="login-tab active">
                    <div class="row">
                        <div class="input-field col s12 center">
                            <img src="" alt="" class="responsive-img valign profile-image-login">
                            <p class="center login-form-text">Boilerplate - Login</p>
                        </div>
                    </div>

                    <form class="login-form">
                        <div class="row margin">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">account_circle</i>
                                <input id="username" type="text">
                                <label for="username">Usuário</label>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">lock</i>
                                <input id="password" type="password">
                                <label for="password">Senha</label>
                            </div>
                            <div class="input-field col s12 m12 l12  login-text">
                                <input type="checkbox" id="remember-me">
                                <label for="remember-me">Lembrar senha</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12 center">
                                <a href="@Url.Action("Index", "Home")" class="btn waves-effect cyan waves-light col s12">Login</a>
                            </div>
                        </div>
                        <div class="input-field col s12 m6">
                            <a href="@Url.Action("Index", "Home")" class="waves-effect blue darken-3 waves-light btn col s12"><i class="fa fa-facebook left"></i>Login Facebook</a>
                        </div>
                        <div class="input-field col s12 m6">
                            <a href="@Url.Action("Index", "Home")" class="waves-effect red waves-light btn col s12"><i class="fa fa-google left"></i>Login Gooogle</a>
                        </div>


                        <div class="row">
                            <div class="input-field col s6 m6 l6">
                                <p class="margin medium-small"><a id="register" href="#">Registre-se!</a></p>
                            </div>
                            <div class="input-field col s6 m6 l6">
                                <p class="margin right-align medium-small"><a id="esqueci" href="#">Esqueceu sua senha?</a></p>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="register-tab" style="display:none;">

                    <div class="row">
                        <div class="input-field col s12 center">
                            <img src="" alt="" class="responsive-img valign profile-image-login">
                            <p class="center login-form-text">Boilerplate - Register</p>
                        </div>
                    </div>

                    <form class="login-form">
                        <div class="row margin">
                            <div class="input-field col s12">
                                <input id="username" type="text">
                                <label for="username">Usuário</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="password" type="password">
                                <label for="password">Senha</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="repeat-password" type="password">
                                <label for="repeat-password">Repita a senha</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <a href="index.html" class="btn waves-effect cyan waves-light col s12 m6 offset-m3">Salvar</a>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="input-field col s12 m12 l12 center">
                                <a id="login" href="#">Já possuo uma conta!</a>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="remember-tab" style="display:none;">

                    <div class="row">
                        <div class="input-field col s12 center">
                            <img src="" alt="" class="responsive-img valign profile-image-login">
                            <p class="center login-form-text">Boilerplate - Esqueci minha senha</p>
                        </div>
                    </div>

                    <form class="login-form">
                        <div class="row margin">
                            <div class="input-field col s12">
                                <input id="email" type="email">
                                <label for="email">E-mail</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <a href="index.html" class="btn waves-effect cyan waves-light col s12 m6 offset-m3">Enviar</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12 m12 l12 center">
                                <a id="voltar" href="#">Voltar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        @RenderBody()
    </main>

    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>    
    <script>
        
        $("#register").click(function (e) {
            e.preventDefault();
            $(".login-tab").slideToggle("fast");
            $(".register-tab").slideToggle("fast");
        });

        $("#login").click(function (e) {
            e.preventDefault();
            $(".register-tab").slideToggle("fast");
            $(".login-tab").slideToggle("fast");
        });
        $("#esqueci").click(function (e) {
            e.preventDefault();
            $(".login-tab").slideToggle("fast");
            $(".remember-tab").slideToggle("fast");
        });
        $("#voltar").click(function (e) {
            e.preventDefault();
            $(".login-tab").slideToggle("fast");
            $(".remember-tab").slideToggle("fast");
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>

