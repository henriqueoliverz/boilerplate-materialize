<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>BoilerPlate - Materialize - OpenSource</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/materialize.min.css" type="text/css" rel="stylesheet" media="screen">
    <link href="~/Content/Account.css" type="text/css" rel="stylesheet" media="screen">

</head>
<body class="cyan">  
    <main class="valign-wrapper valign">
        <div id="login-page" class="row login-page">
            <div class="col s12 z-depth-4 card-panel">
                @RenderBody()                
            </div>
        </div>
    </main>

    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/materialize.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $("#register").click(function (e) {
            e.preventDefault();
            $(".login-tab").slideToggle("fast");
            $(".register-tab").slideToggle("fast");
        });

        $("#login").click(function (e) {
            e.preventDefault();
            $(".register-tab").slideToggle("fast");
            $(".login-tab").slideToggle("fast");
        });
        $("#esqueci").click(function (e) {
            e.preventDefault();
            $(".login-tab").slideToggle("fast");
            $(".remember-tab").slideToggle("fast");
        });
        $("#voltar").click(function (e) {
            e.preventDefault();
            $(".login-tab").slideToggle("fast");
            $(".remember-tab").slideToggle("fast");
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>

